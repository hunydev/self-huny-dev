{
  "name": "self",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler dev",
    "build": "vite build && cp -r public/* dist/",
    "build:worker": "vite build && cp -r public/* dist/",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply self --local",
    "db:migrate:remote": "wrangler d1 migrations apply self --remote",
    "db:studio": "wrangler d1 migrations list self --local",
    "r2:create": "wrangler r2 bucket create self-files",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "hono": "^4.6.0",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "sharp": "^0.34.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wrangler": "^4.51.0"
  }
}
